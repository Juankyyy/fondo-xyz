@{
    ViewBag.Title = "FODUN - Reservas";
    ViewBag.css = "reserves.css";
}

<h5 class="title mt-3">Mis Reservas</h5>

<div class="main mt-3 mb-5">
    <div class="d-flex justify align-items-center text-white gap-3">
        <div class="main-title d-flex justify-content-center align-items-center">
            <p>Mis Reservas</p>
        </div>
    </div>

    <div class="main-content">
        <table class="table table-striped text-center align-middle table-secondary">
            <thead>
                <tr>
                    <th>Ampliar</th>
                    <th>Lugar</th>
                    <th>Fecha Reserva</th>
                    <th>Fecha Llegada</th>
                    <th>Fecha Salida</th>
                    <th>No. Personas</th>
                    <th>No. Habitaciones</th>
                    <th>Valor Total</th>
                    <th>Comprobante de Pago</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var reserve in Model)
                {
                    <tr>
                        <td>
                            <div class="details-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 100 100"><path fill="#787878" d="M56.774 10.391c-17.679 0-32.001 14.329-32.001 32a31.85 31.85 0 0 0 4.588 16.517L13.846 74.423l.054.054c-1.656 1.585-2.673 3.835-2.673 6.378c-.001 4.913 3.913 8.755 8.821 8.754c2.507-.001 4.749-1.004 6.349-2.636l.039.039l16.008-16.009a31.9 31.9 0 0 0 14.33 3.388c17.68 0 31.999-14.327 31.999-32c0-17.671-14.32-32-31.999-32m.194 51.417c-11.05 0-20.001-8.954-20.001-20c0-11.044 8.951-20 20.001-20s19.999 8.955 19.999 20c.001 11.046-8.949 20-19.999 20"/></svg>
                            </div>
                        </td>
                        <td>@reserve.Location</td>
                        <td>@reserve.ReservationDate</td>
                        <td>@reserve.ArrivalDate</td>
                        <td>@reserve.DepartureDate</td>
                        <td>@reserve.Persons</td>
                        <td>@reserve.Rooms</td>
                        <td>$800.000</td>
                        <td><button class="btn btn-sm btn-danger">Enviar</button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>