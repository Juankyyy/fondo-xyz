                    <div class="modal-date">
                        <h5 class="details-subtitle">Mis Fechas</h5>
                        <div class="date-inputs">
                            <div>
                                <label>Fecha de Llegada:</label>
                                <input type="text" class="form-control">
                            </div>

                            <div>
                                <label>Fecha de Salida:</label>
                                <input type="text" class="form-control">
                            </div>

                            <div class="w-50">
                                <label>Noches:</label>
                                <input type="number" class="form-control">
                            </div>

                            <div class="w-50">
                                <label>Personas:</label>
                                <input type="number" class="form-control">
                            </div>

                            <div class="form-check mt-1">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Servicio de lavandería
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="modal-total">
                        <h5 class="details-subtitle">Total Reserva</h5>
                        <div class="date-inputs">
                            <div class="w-50">
                                <label>Habitaciones:</label>
                                <input type="number" class="form-control">
                            </div>

                            <div>
                                <label>Dias ordinarios:</label>
                                <input type="number" class="form-control">
                            </div>

                            <div>
                                <label>Dias Especiales:</label>
                                <input type="number" class="form-control">
                            </div>

                            <div>
                                <label>Lavandería:</label>
                                <input type="number" class="form-control">
                            </div>

                            <div class="d-flex gap-2 justify-content-center mt-2 fs-5">
